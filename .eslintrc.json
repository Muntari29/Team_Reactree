{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["react-app", "plugin:prettier/recommended"],
  "rules": {
    "keyword-spacing": "error",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "arrow-spacing": "error",
    "padded-blocks": ["error", { "blocks": "never" }],
    "comma-spacing": ["error", { "before": false, "after": true }]
  },
  "import/no-anonymous-default-export": [
    "error",
    {
      "allowObject": true
    }
  ]
}
